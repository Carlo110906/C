#include <stdio.h> 

int main() 
{
    char operador;
    double num1, num2, resultado;

    // Mostrar menu de operaciones
    printf("Seleccione una operacion (+, -, *, /): ");
    scanf("%c", &operador);

    // Pedir los numeros al usuario
    printf("Ingrese el primer numero: ");
    scanf("%lf", &num1);
    printf("Ingrese el segundo numero: ");
    scanf("%lf", &num2);

    // Calcular el resultado basado en la operacion seleccionada
    switch (operador) {
        case '+':
            resultado = num1 + num2;
            printf("%.2lf + %.2lf = %.2lf\n", num1, num2, resultado);
            break;
        case '-':
            resultado = num1 - num2;
            printf("%.2lf - %.2lf = %.2lf\n", num1, num2, resultado);
            break;
        case '*':
            resultado = num1 * num2;
            printf("%.2lf * %.2lf = %.2lf\n", num1, num2, resultado);
            break;
        case '/':
            if (num2 != 0) {
                resultado = num1 / num2;
                printf("%.2lf / %.2lf = %.2lf\n", num1, num2, resultado);
            } else {
                printf("Error: No se puede dividir entre 0.\n");
            }
            break;
        default:
            printf("Operador no v√°lido.\n");
            break;
    }

    return 0;
}
